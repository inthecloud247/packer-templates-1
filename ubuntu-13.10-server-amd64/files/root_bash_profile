#root bash profile and bashrc

#Source /etc/profile
source /etc/profile

#gives me a colored prompt
export PS1='\[\033[0;31m\]\u\[\033[0m\]@\[\033[0;31m\]\h\[\033[0m\]: \[\033[0;31m\]\W\[\033[0m\] > '
export CLICOLOR=1
export LSCOLORS=ExFxCxDxBxegedabagacad

#alias for ls turning into ls -lga
alias ls="ls -lh --color=auto"

#alias for tmux re-attachment to sessions
alias tmuxa="tmux attach-session"